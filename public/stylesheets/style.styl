gradient(x, y)
  background y
  background -webkit-gradient(linear, left top, left bottom, from(x), to(y))
  background -moz-linear-gradient(top, x, y)
  background -o-linear-gradient(top, x,y)

radius(n)
  -moz-border-radius n
  -webkit-border-radius n
  border-radius n

shadow(n)
  -moz-box-shadow: 0 n n #eee;
  -webkit-box-shadow: n n n #eee;

html,body,div,ul,li,p,form, h1, h2, pre,a
  border  0
  padding 0
  margin  0

html
  height 100%

body
  width  100%
  height 100%
  color #333
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif;
  position relative

.main
  min-height 100%

a
  color rgb(109,59,28)

.site
  .title
    gradient(rgb(192,99,52), rgb(234,121, 54))
    padding 20px 50px 10px 50px
    border-bottom 1px solid rgb(109,59,28)
  .navigation
    ul
      width 100%
      gradient(#333, #111)
      li
        display inline-block
        width 100px
        font-size: 12px
        text-align center
        a,span
          radius(5px)
          display block
          padding 10px
        a
          color #ccc
          text-decoration none
        a:hover
          color white
        span
          color white
          background-color black

  .login
    position absolute
    top 20px
    right 0
    width 200px

.page
  .top-image
    vertical-align top
    display inline-block
    width 350px
    img
      radius(5px)
      shadow(5px)
  .description
    vertical-align top
    width auto
    display inline-block

