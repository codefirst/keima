    radius 10px
    text-align left
    padding 5px 10px
    width 100%
    margin-bottom 5px
    gradient(#FCFCFC, #EFEFEF)
    shadow(1px)
    font-size 90%
    min-height 50px

    .title
      font-weight bold

    .date
      float right
      top 5px
