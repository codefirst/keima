body > .info
  position relative
  margin-top -80px
  height 100px
  clear both
  shadow(1px)
  padding-top 10px
  text-align center
  color      white
  border-top 1px solid rgb(109,59,28)
  gradient(rgb(192,99,52), rgb(234,121, 54))
  font-size  90%

  a
    color white

/* button */
.button
  border-bottom 1px solid #A19B91 !important
  text-decoration none !important
  font 12px/100% 'Lucida Grande', 'Lucida Sans Unicode', arial, sans-serif
  padding .55em 1em .6em 1em
  radius(.5em)
  color #29231A;
  border solid 1px #A19B91;
  gradient(#C3BDB4, #BCB5AB)
  display: inline-block;
  cursor: pointer;
  text-align: left;
  text-decoration: nonew;
  text-transform: uppercase;
  shadow(2px)

.button:hover
  background #dc4809
  gradient(#c3bdb4,  #ada79d)

.button:active
  color #29231a
  gradient(#c3bdb4,  #9a948a)

input.text
  radius(3px)
  width 200px
  background none repeat scroll 0 0 #E9E9E9
  color #4A3F2D
  font-size 13px
  border medium none
  padding 6px